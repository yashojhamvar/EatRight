<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.eatright.eatright.FoodPreferences"
    tools:showIn="@layout/activity_preferences">

    <ScrollView
        android:layout_width="386dp"
        android:layout_height="517dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="-157dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fadeScrollbars="true"
            android:orientation="vertical"
            android:weightSum="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:scrollbarStyle="insideOverlay"
            tools:scrollbars="vertical">
            <!-- android:layout_width="368dp"
            android:layout_height="495dp" -->

            <!-- Meal Type -->

            <TextView
                android:id="@+id/mealType"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="WHAT I WANT:"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/mealType_nonveg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="selectItem"
                android:text="Non-Vegetarian Meals" />

            <CheckBox
                android:id="@+id/mealType_veg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="selectItem"
                android:text="@string/veg_meal" />

            <CheckBox
                android:id="@+id/mealType_vegan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="selectItem"
                android:text="@string/vegan_meal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <!-- Exclude Meats -->

            <TextView
                android:id="@+id/avoidMeat"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/auth_method_button_marginBottom"
                android:text="MEATS TO AVOID:"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/avoidMeat_chicken"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="selectItem"
                android:text="Chicken" />

            <CheckBox
                android:id="@+id/avoidMeat_pork"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="selectItem"
                android:text="Pork" />

            <CheckBox
                android:id="@+id/avoidMeat_fish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="selectItem"
                android:text="Fish" />

            <CheckBox
                android:id="@+id/avoidMeat_beef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="selectItem"
                android:text="Beef" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <!-- Exclude Other Ingredients -->

            <TextView
                android:id="@+id/avoidVeg"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/tw__btn_bar_margin_left"
                android:text="INGREDIENTS TO AVOID"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/avoidVeg_onions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="selectItem"
                android:text="Onions" />

            <CheckBox
                android:id="@+id/avoidVeg_corn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="selectItem"
                android:text="Corn" />

            <CheckBox
                android:id="@+id/avoidVeg_lettuce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="selectItem"
                android:text="Lettuce" />

            <CheckBox
                android:id="@+id/avoidVeg_tomato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="selectItem"
                android:text="Tomatoes" />

            <CheckBox
                android:id="@+id/avoidVeg_diary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="selectItem"
                android:text="Dairy" />

            <CheckBox
                android:id="@+id/avoidVeg_wheat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="selectItem"
                android:text="Wheat" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <!-- Conditions -->

            <TextView
                android:id="@+id/userConditions"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/auth_method_button_marginBottom"
                android:text="CONDITIONS I HAVE"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/userConditions_diabetes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="selectItem"
                android:text="Diabetes" />

            <CheckBox
                android:id="@+id/userConditions_lactoseIntolerance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="selectItem"
                android:text="Lactose Intolerance" />

            <CheckBox
                android:id="@+id/userConditions_glutenIntolerance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="selectItem"
                android:text="Gluten Intolerance" />

            <CheckBox
                android:id="@+id/userConditions_nutAllergy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="selectItem"
                android:text="Nut Allergy" />

            <CheckBox
                android:id="@+id/userConditions_highBloodPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="selectItem"
                android:text="High Blood Pressure" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <!-- Diets -->

            <TextView
                android:id="@+id/dietsFollowed"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/auth_method_button_marginBottom"
                android:text="DIETS YOU FOLLOW"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="20dp" />

            <CheckBox
                android:id="@+id/diet_keto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="selectItem"
                android:text="Ketogenic Diet" />

            <CheckBox
                android:id="@+id/diet_helal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="selectItem"
                android:text="Dr. Sumi Helal Diet" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <!-- Calorie Constraints -->

            <TextView
                android:id="@+id/calorieConstraints"
                style="?android:attr/listSeparatorTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginTop="@dimen/auth_method_button_marginBottom"
                android:text="CALORIE CONSTRAINTS"
                android:textAppearance="?android:textAppearanceLarge"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Proteins" />

                <EditText
                    android:id="@+id/constraint_Protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Carbohydrates" />

                <EditText
                    android:id="@+id/constraint_carbs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Sugar" />

                <EditText
                    android:id="@+id/constraint_sugar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Calories" />

                <EditText
                    android:id="@+id/constraint_calories"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Fat" />

                <EditText
                    android:id="@+id/constraint_fat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/auth_method_button_marginBottom"
                android:layout_marginTop="@dimen/auth_method_button_marginBottom"
                android:layout_weight="0.05"
                android:onClick="savePreferences"
                android:text="SAVE" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>